/* pages/camera/result/index.wxss */
@import "../../../template/animalcard/animalcard.wxss";
@import "../../../template/ownercard/ownercard.wxss";
page{
  background-color: rgb(243, 237, 237);
}
.container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.topone{
  width: 100%;
  display: flex;
  background-color: rgb(245, 191, 122);
  height: 100rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.tab {
  float: left;
  flex: 1 1 0.2;
  text-align: center;
  align-items: center;
  padding: 5rpx 10rpx;
  border:3px solid white;
  background: white;
  margin-right: 30rpx;
  border-radius: 50rpx;
}

.topTabSwiper {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  zoom: 1;
  display: flex;
  flex-direction: row;
}
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 2px solid rgb(243, 237, 237);
  color: orange;
}

.swiper {
  width: 100%;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
}
