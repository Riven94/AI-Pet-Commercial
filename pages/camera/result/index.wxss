/* pages/camera/result/index.wxss */
@import "../../../template/animalcard/animalcard.wxss";
@import "../../../template/ownercard/ownercard.wxss";
.container{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
  }
  .topone{
    width: 100%;
    display: flex;
    background: linear-gradient(0deg, rgb(255, 154, 2) 0%,rgb(236, 187, 113) 100%);
    flex-direction: column;
    align-items: center;
  }
  .tab {
    float: left;
    text-align: center;
    padding: 15rpx 0;
    display: block;
    border:3px solid white;
    border-radius: 400rpx;
    background: white;
    height: 30rpx;
    margin: 20rpx 40rpx;
  }
  
  .topTabSwiper {
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    zoom: 1;
  }
  
  .topTabSwiper:after {
    content: "";
    clear: both;
    display: block;
  }
  
  .tabBorer {
    border-bottom: 2px solid rgb(243, 237, 237);
    color: rgb(250, 245, 245);
  }
  
  .swiper {
    width: 100%;
  }
  
  .swiper_con {
    text-align: center;
    width: 100%;
    height: 100%;
    padding: 80rpx 0;
  }