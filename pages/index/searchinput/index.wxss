/* pages/index/searchinput/index.wxss */
@import "../../../template/publishitem/publishitem.wxss";
.container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.top{
  width: 100%;
  display: flex;
  background: #F3BE67;
  flex-direction: column;
  align-items: center;
}
.search{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background-color: white;
    border-radius: 20rpx 20rpx 20rpx 20rpx;
    height: 40rpx;
    width: 680rpx;
    font-size: 25rpx;
    color:#666;
    justify-content: center;
    align-items: center;
  }
  .searchicon{
    float:left;
    margin-left: 10rpx;
    width: 40rpx;
    height: 40rpx;
  }

 
 .tab {
  float: left;
  text-align: center;
  padding: 10rpx 0;
}

.topTabSwiper {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  zoom: 1;
  justify-content: space-around;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 2px solid rgb(243, 237, 237);
  color: rgb(250, 245, 245);
}

.swiper {
  width: 100%;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
}

/*  */

.person_box {
  position: relative;
}

.phone_select {
  margin-top: 0;
  z-index: 100;
  position: absolute;
}

.select_one {
  text-align: center;
  background-color: rgb(239, 239, 239);
  width: 676rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 5%;
  border-bottom: 2rpx solid rgb(255, 255, 255);
}
