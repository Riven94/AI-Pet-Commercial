/* pages/market/inde.wxss */
.container{
  height: auto;
  background-color: rgb(248,249,249);
}
.top{
  width: 100%;
  height: 260rpx;
  background: linear-gradient(-180deg, rgba(2,187,255,1) 100%,rgb(126, 192, 253) 0%);
  border-radius: 0% 0% 50% 50%;
}
.topitem{
  display: flex;
  flex-direction: row;
  position: relative;
  top: 40rpx;
  margin-left: 30rpx;
}
.items{
  display: flex;
  flex-direction: row;
  width: 730rpx;
}
.wrap{
  margin-right: 65rpx;
}
.search{
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
  background-color: white;
  width: 600rpx;
  align-items: center;
}
.searchIcon{
  position: absolute;
  top: 10rpx;
  left: 18rpx;
}
.input{
  width: 500rpx;
  margin-left: 60rpx;
  background-color: white;
  border-radius: 20rpx;
}
.cart{
  margin-left: 40rpx;
  width: 50rpx;
  height: 50rpx;
}
.activities{
  width: 600rpx;
  height: 200rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 80rpx;
}
.activityImg{
  width: 600rpx;
  height: 200rpx;
}
.bottom{
  margin-top: 80rpx;
  width: 100%;
}
.servicesItems{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.itemFoot{
  margin-top: 8rpx;
  width: 40rpx;
  height: 5rpx;
  border-radius: 3rpx;
  background: linear-gradient(-90deg, rgba(51,123,255,1) 0%,rgba(216,82,255,1) 100%);
}
.wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.off{
  display: none;
}
.serviceDetail{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  justify-content: center;
}
.detailwrap{
  display: flex;
  flex-direction: column;
  width: 320rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  background-color: white;
}
.detailImg{
  width: 320rpx;
  height: 300rpx;
  border-radius: 10rpx;
}
.distance{
  float: left;
  font-size: 25rpx;
  margin-left: 5rpx;
}
.quantity{
  margin-left: 40rpx;
  font-size: 25rpx;
  color: gray;
}
.footwrap{
  margin: 40rpx 0rpx 20rpx 10rpx;
  display: flex;
}
.name{
  margin: 10rpx 0rpx 0rpx 10rpx;
}