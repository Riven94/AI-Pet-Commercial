<!--pages/market/uploadFreight/index.wxml-->
<import src="../../../template/top/index.wxml" ></import>
<template is='top'></template>
<form catchsubmit="formSubmit">
  <view class="section" wx:for="{{info}}">
    <view class="left">{{item}}</view>
    <input class="input" name='{{"input"+index}}' />
  </view>
  <view style="margin:20rpx 34rpx">请上传1~2张照片吧
  <image src="/icons/添加图片.png" style="height: 80rpx;width: 80rpx;margin-left: 20rpx;" bindtap="uploadImage"></image>
  </view>
  <view  style="margin-left: 34rpx;" wx:for="{{imageList}}">
      <image mode="widthFix" style="width:350rpx" src="{{item}}"></image>
  </view>
  <view class='fenlei'>
  <text >类型:</text>
  <!-- 下拉框 -->
  <view class='select_box'>
    <view class='select' catchtap='selectTaps'>
      <text class='select_text'>{{selectDatas[indexs]}}</text>
    </view>
    <view class='option_box' style='height:{{shows?(selectDatas.length>5?300:selectDatas.length*60):0}}rpx;'>
      <text class='option' style='{{indexs==selectDatas.length-1&&"border:0;"}}' wx:for='{{selectDatas}}' wx:key='this' data-index='{{index}}' catchtap='optionTaps'>{{item}}</text>
    </view>
    </view>
  </view>
  <button class="save" style="background-color: rgb(1,146,255); position: relative; left: 1rpx; top: 58rpx" type="primary" formType="submit">保存</button>
</form>

