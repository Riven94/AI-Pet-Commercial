page{
  background-color: rgb(248,249,249);
}
.container{
  display: flex;
  flex-direction: column;
  height: 2000rpx;
}
.top{
  height: 100rpx;
  background: #F3BE67;
  display: flex;
  justify-content: flex-end;
}
.title{
  color: white;
  margin: 30rpx auto;
}
.cart{
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx;
  position: absolute;
}
.images{
  width: 100%;
  height: 600rpx;
}
.img{
  width: 100%;
  height: 600rpx;
}
.price-general{
  height: 110rpx;
  background-color: #E4793D;
  color: white;
}
.price{
  font-size: 33rpx;
  margin: 10rpx 0 0 10rpx;
}
.bottom-wrap{
  margin: 10rpx 20rpx 0 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 300;
}
.return{
  color: #2C975E;
  border: 1px solid #2C975E;
  font-size: 27rpx;
  margin: 10rpx 0;
}
.methods{
  color: #969699;
  font-size: 27rpx;
  margin: 10rpx 0;
}
.commodityname{
  margin: 10rpx 0;
}
.bottomWrap{
  background-color: rgb(248,249,249);
}
.describe{
  margin-top: 10rpx;
  background-color: white;
}
.describe-wrap{
  width: 95%;
  margin: 0 auto;
}
.freight{
  background-color: white;
  display: flex;
  height: 70rpx;
  align-items: center;
  margin: 20rpx auto;
}
.left{
  width: 1200rpx;
  margin: 0 50rpx 0 20rpx;
}
.right{
  width: 80%;
  display: flex;
  justify-content: space-between;
}
.serviceleft{
  margin: 0 0 0 20rpx;
}
.freight-right{
  color: #969699;
  margin-right: 20rpx;
}
.service{
  background-color: white;
  display: flex;
  padding: 20rpx 0;
}
.service-left{
  color: #969699;
}
.comment{
  display: flex;
  justify-content: space-between;
  margin: 20rpx auto;
  background-color: white;
  padding: 20rpx 0;
}
.comment-text{
  margin-left: 20rpx;
}
.more{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: white;
}
.add{
  background-color: #E4793D;
  margin-left: auto;
  padding: 10rpx 30rpx;
  border-radius: 40rpx 0 0 40rpx;
  border-right: 4rpx solid white;
}
.buy{
  border-left: 30rpx;
  background-color: #E4793D; 
  padding: 10rpx 30rpx;
  border-radius: 0 40rpx 40rpx 0;
}
.wrap{
  display: flex;
  color: white;
  margin-left: auto;
  font-size: 35rpx;
  width: 70%;
}