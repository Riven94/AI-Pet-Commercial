page{
  background-color: rgb(248,249,249);
}
.top{
  height: 100rpx;
  display: flex;
  background: #F3BE67;
  align-items: flex-end;
  justify-content: space-between;
}
.title{
  color: white;
  margin: 30rpx auto;
}
.back{
  width: 40rpx;
  height: 40rpx;
  rotate: 180deg;
  margin: 20rpx;
}
.cart{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.comment-general{
  width: 100%;
  height: 130rpx;
  margin: 20rpx 0 0 0;
  display: flex;
  flex-direction: column;
  background-color: white;

}
.tabs{
  margin-top: 20rpx;
  margin-left: 30rpx;
  display: flex;
}
.tab{
  padding: 0 20rpx 0 20rpx;
  border-radius: 100rpx;
  background-color: #F4F4F4;
  margin-right: 10rpx;
}
.on{
  background-color: #EBCDCD;
  color: #EA5352;
}
.text{
  margin-top: 10rpx;
  margin-left: 30rpx;
}
.comment-detail{
  display: flex;
  flex-direction: column;
}
.comment{
  display: flex;
  height: 120rpx;
  align-items: center;
}
.icon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  width: 10%;
  margin-left: 40rpx;
}
.stars{
  display: block;
  width: 150rpx;
  margin-right: 30rpx;
  flex-wrap: wrap-reverse;
}
.star{
  float: right;
  width: 30rpx;
  height: 30rpx;
}
.middle{
  flex:10;
  margin-left: 40rpx;
}
.time{
  margin-top: 10rpx;
  color: #878282;
}