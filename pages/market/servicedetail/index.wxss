@import "../../../template/project/index.wxss";
page{
  height: auto;
  background-color: rgb(248,249,249);
}
.container{
  display: flex;
  flex-direction: column;
}
.top{
  position: fixed;
  display: flex;
  width: 100%;
  height: 150rpx;
  background: #F3BE67;
}
.back{
  width: 30rpx;
  height: 30rpx;
  rotate: 180deg;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.cart{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.backwrap{
  display: flex;
  color: white;
}
.text{
  margin: 5rpx 0 0 10rpx;
}
.wrap{
  width: 100%;
  margin-top: 90rpx;
  display: flex;
  justify-content: space-between;
}
.middle{
  position: relative;
  top: 180rpx;
  display: flex;
  width: 90%;
  left: 40rpx;
}
.img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.returnwrap{
  display: flex;
  flex-direction: row;
}
.servicename{
  margin-left: 30rpx;
  font-size: 35rpx;
  font-weight: 550;
}
.return{
  display: flex;
  margin-left: 15rpx;
}
.line{
  margin-left: 15rpx;
}
.general{
  display: flex;
}
.rightmiddle{
  display: flex;
  margin: 40rpx 0 0 15rpx;
}
.appointment{
  margin-left: 15rpx;
}
.consumptions{
  margin: 40rpx 0 10rpx 30rpx;
}
.help{
  margin-left: 10rpx;
}
.comment{
  display: flex;
  margin: 200rpx auto 0;
  width: 90%;
  padding-bottom: 15rpx;
  border-bottom: 1px solid #DCDCDC;
}
.star{
  width: 35rpx;
  height: 35rpx;
}
.more{
  margin-left: 180rpx;
  color: gray;
}
.coupon{
  width: 90%;
  display: flex;
  align-items: center;
  margin: 30rpx auto;
  color: rgb(202,66,70);
  background-color: rgb(254,238,238);
  border-radius: 10rpx;
  padding: 15rpx 0;
}
.price{
  font-weight: 600;
  font-size: 50rpx;
}
.type{
  font-weight: 550;
}
.label{
  font-size: 28rpx;
  margin: 20rpx 0 0 20rpx;
}
.receive{
  width: 30%;
}
.coupon-middle{
  margin-left: 20rpx;
  width: 70%;
}
.items{
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: gray;
  font-size: 33rpx;
  margin-left: -10rpx;
}
.selected{
  color: black;
  font-weight: 600;
  padding-bottom: 20rpx;
  border-bottom: 10rpx solid rgb(249,200,16);
}
.temp{
  color: gray;
  width: 90%;
  border-bottom: 1px solid #DCDCDC;
  margin: 20rpx auto;
  padding-bottom: 20rpx;
}
.payment{
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 2rpx solid black;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 40rpx;
  height: 80rpx;
  background-color: white;
}
.buyprice{
  margin: 0 40rpx;
  color: rgb(234,83,82);
}
.buy{
  color: white;
  background-color: rgb(234,83,82);
  padding: 0 20rpx;
  border-radius:  40rpx;
  margin: 0 30rpx;
  font-size: 38rpx;
}