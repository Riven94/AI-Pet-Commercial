<view class="container">
  <view class="top">
  <!-- <image class="back" src="../../../icons/arrow.png" bindtap="back"></image> -->
  <view class="title">购物车</view>
  </view>
  <checkbox-group class="comodities" bindchange="checkboxChange">
    <label class="label" wx:for="{{comodities}}">
      <view class="weui-cell__hd">
        <checkbox value="{{item.id}}" checked="{{item.checked}}" />
      </view>
      <view class="comodityWrap">
        <image class="img" src="{{item.imgUrl}}"></image>
        <view class="middle">
          <view class="name">{{item.name}}</view>
          <view class="express">{{item.service}}</view>
          <view class="price">￥{{item.price}}</view>
        </view>
        <view class="count">
          <button class="button" style="height: 50rpx;" bindtap="minus" disabled="{{item.count < 1}}" data-id="{{item.id}}">-</button>
          <view class="quantity">×{{item.count}}</view>
          <button class="button" style="height: 50rpx;" bindtap="add" data-id="{{item.id}}">+</button>
        </view>
      </view>
    </label>
  </checkbox-group>
  <view class="bottom">
    <view class="wrap">
      <view class="delete" bindtap="delete">删除</view>
      <view class="total">合计￥{{totalPrice}}</view>
      <button class="pay" style="width: 200rpx;" bindtap="pay">结算</button>
    </view>
  </view>
</view>