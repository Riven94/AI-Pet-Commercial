/* pages/knowledge/index.wxss */
page{
  background-color: rgb(248,249,249);
}
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100%;
}
.top{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 150rpx;
  background: linear-gradient(0deg, rgba(2,187,255,1) 0%,rgba(1,134,255,1) 100%);
}
.searchwrap{
  margin: 35rpx auto;
}
.search{
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
  background-color: white;
  width: 700rpx;
  align-items: center;
}
.searchIcon{
  position: absolute;
  left: 38rpx;
}
.input{
  width: 700rpx;
  margin-left: 60rpx;
  background-color: white;
  border-radius: 20rpx;
}
.tabs{
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: -7rpx auto;
}
.tabname{
  color: white;
}
.tab{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.line{
  width: 80rpx;
  height: 5rpx;
  background-color: white;
}
.off{
  display: none;
}
.foot{
  height: 100%;
  background-color: rgb(253, 245, 245);
}
.article{
  width: 90%;
  margin: 50rpx auto;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 10rpx;
}
.articlefoot{
  display: flex;
  flex-direction: row;
}
.articleimg{
  width: 180rpx;
  height: 180rpx;
}
.generalwarp{
  width: 700rpx;
  height: 180rpx;
  margin: 20rpx 5rpx 0 20rpx;
}
.general{
}
.title{
  margin: 20rpx;
}
