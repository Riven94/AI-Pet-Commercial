page{
  background-color: rgb(248,249,249);
}
.top{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 100rpx;
  background: #F3BE67;
}
.article{
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(229,229,229,1);
  margin-top: 20rpx;
}
.article-title{
  font-size: 34rpx;
  width: 90%;
  margin: 10rpx auto;
}
.wrap{
  display: flex;
  width: 90%;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.article-content{
  width: 90%;
  height: 190rpx;
  font-size: 25rpx;
  overflow: hidden;
  line-height: 47rpx;
}
.article-img{
  width: 190rpx;
  height: 190rpx;
}
.else{
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}