@import '../../../template/top/index.wxss';
@import '../../../template/addImage/index.wxss';
.top{
    width: 100%;
    background: #F3BE67;
}
.delete{
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 30rpx;
  top: 20rpx;
  width: 100rpx;
  height: 60rpx;
  background-color: rgb(240, 169, 56);
  font-weight: 100;
  border-radius: 20rpx;
}
.submit{
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 100rpx;
  height: 60rpx;
  color: white;
  border-radius: 20rpx;
  background-color: rgb(240, 169, 56);
  font-weight: 100;
}
.line{
  width: 100%;
  height: 3rpx;
  background-color: #f3f3eb;
  margin-top: 0rpx;
}
.title-text{
  margin-left: 10rpx;
  font-size: large;
  width: 95%;
  margin: 0 auto;
}
.title{
  margin: 0 auto;
  width: 95%;
}
.weui-input{
  height: 350rpx;
  width: 95%;
  margin: 0 auto;
  position: relative;
  word-break: break-all;
  word-wrap: break-word;
}
.text::after{
  position: absolute;
  content: '';
  margin: 16rpx 0 0 20rpx;
  width: 0rpx;
  height: 0rpx;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
  border-top: 8px solid gray;
}