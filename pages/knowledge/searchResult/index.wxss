/* pages/knowledge/searchResult/index.wxss */
.top{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 100rpx;
  background: linear-gradient(0deg, rgba(2,187,255,1) 0%,rgba(1,134,255,1) 100%);
}
.articles{
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title{
  height: 50rpx;
}
.article{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin: 20rpx 0 30rpx 0;
  border-radius: 20rpx;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(229,229,229,1);
}
.title{
  margin-top: 20rpx;
}
.articleimg{
  margin: 0 auto;
  width: 90%;
  height: 250rpx;
}
.desc{
  color: gray;
  font-size: 27rpx;
  margin: 10rpx 0;
}