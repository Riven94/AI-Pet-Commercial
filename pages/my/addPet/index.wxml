<import src="../../../template/top/index.wxml"></import>
<template is="top"></template>
<form catchsubmit="formSubmit">
    <view class="section" wx:for="{{info}}">
      <view class="left">{{item}}</view>
      <input class="input" name='{{"input"+index}}' value="{{default[index]}}"/>
    </view>
    <picker class="picker" bindchange="bindAnimalChange" value="{{animalIndex}}" range="{{animalType}}">
        <view >宠物类型:<text class="text" space='true' decode="true">{{animalType[animalIndex]}}</text></view>
    </picker>
   
    <picker class="picker" bindchange="bindLostChange" value="{{lostIndex}}" range="{{lostType}}">
        <view >是否流浪:<text class="text" space='true' decode="true">{{lostType[lostIndex]}}</text></view>
    </picker>
   
    <picker class="picker" bindchange="bindStateChange" value="{{state[stateIndex]}}" range="{{state}}">
        <view >是否丢失:<text class="text" space='true' decode="true">{{state[stateIndex]}}</text></view>
    </picker>

    <view class="image">
      <view bindtap="uploadImage">
        <image src="../../../icons/round-add_photo_alte.png" style="width: 90rpx;height: 90rpx;"></image>
      </view>
    </view> 
      <view class="imgs">
        <image wx:for="{{imageList}}" class="img" name="img" src="{{item}}" mode="aspectFill"></image>
      </view>
    <button class="save" style="background-color: rgb(1,146,255); position: relative; left: 1rpx; top: 58rpx" type="primary" formType="submit">保存</button>
  </form>