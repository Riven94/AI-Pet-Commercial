/* pages/index/more/index.wxss */
@import "../../../template/animalcard/animalcard.wxss";
@import "../../../template/ownercard/ownercard.wxss";
page{
  background-color: #EFEEEE;
}
.container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.bluetop{
  height: 100rpx;
  width: 100%;
  display: flex;
  background: #F3BE67;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.title{
  color: white;
  position: absolute;
  top: 13rpx;
}
.triangle{
  margin-top: 9rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  float: left;
  width: 0rpx;
  height: 0rpx;
  border-right: 12rpx solid white;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
}
.moremessage{
  color: white;
  float: left;
}
.message{
  width: 100%;
  display: block;
}
.left{
  background-color: #EFEEEE;
  height: 800rpx;
}
.info{
  padding-top: 20rpx;
  background-color: #EFEEEE;
}
.information{
  padding: 15rpx 0;
}
