/* pages/index/more/index.wxss */
@import "../../../template/animalcard/animalcard.wxss";
@import "../../../template/ownercard/ownercard.wxss";
.container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.bluetop{
  height: 100rpx;
  width: 100%;
  background: #F3BE67;
  flex-direction: column;
  justify-content: center;
}
.addButton{
  margin: 30rpx;
  background-color: rgba(226, 137, 21, 0.932);
  display: flex;
  justify-content: center;
}
.triangle{
  margin-top: 9rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  float: left;
  width: 0rpx;
  height: 0rpx;
  border-right: 12rpx solid white;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
}
.moremessage{
  color: white;
  float: left;
}
.message{
  width: 100%;
  display: block;
}
.left{
  background-color: #EFEEEE;
  height: 800rpx;
}
.info{
  background-color: #EFEEEE;
}
.img{
  width: 100rpx;
  height: 100rpx;
  margin-left: 40rpx;
}
.text{
  margin: 20rpx 0 20rpx 20rpx;
}
.delete{
  position: absolute;
  right: 40rpx;
  background-color: rgba(226, 137, 21, 0.932);
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
}